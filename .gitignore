cat > .gitignore << 'EOF'
# Environment variables
.env
*.env

# Credentials
*.json
*key.json
service-account-key.json

# Virtual environment
venv/
env/

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python

# Jupyter
.ipynb_checkpoints/
.jupyter/

# Logs
logs/
*.log

# OS files
.DS_Store
.vscode/
.idea/
*.iml

# Google Cloud SDK
google-cloud-sdk/
google-cloud-cli-*.tar.gz

# Large downloads
*.tar.gz
*.zip

# Data files (optional - uncomment if you don't want to track data)
# *.csv
# data/
EOF